<section class="left-column">
  <h2 class="page-title">FORGOT YOUR PASSWORD?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %><br/>
    <p class="label">EMAIL OR USERNAME*</p>
    <%= f.email_field :login, :class=>"small-field" %><br/>
    <%= f.submit "SEND ME RESET INSTRUCTIONS", :class=>"button" %>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
</section>
<section class="right-column">
  <h2 class="latest-posts">LATEST POSTS:</h2>
  <% Post.order('created_at DESC').limit(3).each do |post| %>
    <article class="latest-post">
      <p class="latest-post-title"><%=post.title%></p>
      <p class="latest-post-message"><%=post.text%></p>
      <%= link_to "READ MORE...", post_path(post), :class=>"read-more"%>
      <a class="comment-number">COMMENTS(<%=post.comments.count%>)</a>
    </article>
  <%end%>
</section>
